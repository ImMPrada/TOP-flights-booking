<div class="min-w-full">
  <%= flight.departure_city.name %> to <%= flight.arrival_city.name %>
  <div class="min-w-full flex justify-between">
    <div class="w-1/3 flex flex-col">
      <span class="block">
        fligth number: <%= flight.number %>
      </span>
      <span class="block">
        price: <%= flight.price %>
      </span>
    </div>
    <div class="w-2/3 flex flex-col">
      <span class="block">
        daperture airport: <%= flight.departure_airport.name %> | daperture date: <%= flight.departure_date %>
      </span>
      <span class="block">
        arrival airport: <%= flight.arrival_airport.name %> | arrival date: <%= flight.arrival_date %>
      </span>
    </div>
  </div>
</div>
