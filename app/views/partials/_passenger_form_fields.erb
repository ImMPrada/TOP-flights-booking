<% if passenger.options[:child_index] == 0 %>
  <h3 class="text-xl font-bold">
    <%= "Passenger #{passenger.options[:child_index] + 1}(logged-in user) information" %>
  </h3>
<% else %>
  <h3 class="text-xl font-bold">
    <%= "Passenger #{passenger.options[:child_index] + 1} information" %>
  </h3>
<% end %>

<div class="min-h-full flex flex-col gap-2 mb-3">
  <%= passenger.label :first_name, "first name:" %>
  <%= passenger.text_field(
    :first_name,
    placeholder: Faker::Name.first_name
  ) %>
</div>
<div class="min-h-full flex flex-col gap-2 mb-3">
  <%= passenger.label :last_name, "last name:" %>
  <%= passenger.text_field(
    :last_name,
    placeholder: Faker::Name.last_name
  ) %>
</div>
<div class="min-h-full flex flex-col gap-2 mb-3">
  <%= passenger.label :identification_number, "personal identification number:" %>
  <%= passenger.text_field(
    :identification_number,
    placeholder: Faker::IDNumber.valid
  ) %>
</div>
<div class="min-h-full flex flex-col gap-2 mb-3">
  <%= passenger.label :email, "e-mail:" %>
  <%= passenger.email_field(
    :email,
    placeholder: Faker::Internet.email
  ) %>
</div>
